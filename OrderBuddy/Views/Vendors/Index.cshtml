@{
  Layout = "_Layout";
}

<div>
  <h2>vendors</h2>

  @using OrderBuddy.Models
  @if (Model.Count == 0)
  {
    <p>no current vendors</p>
  }

  @foreach (Vendor obj in Model)
  {
    <a href="/vendors/@obj.Id"><h4>@obj.Name</h4></a>
  }

  <a href="/vendors/new"><p>add new vendor</p></a>
  <a href="/"><p>back home</p></a>
</div>

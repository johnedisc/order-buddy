@{
  Layout = "_Layout";
}

<div>
  @using OrderBuddy.Models

  <h2>@Model.Name</h2>

  @if (Model.Orders.Count == 0)
  {
    <p>no current orders</p>
  }

  @foreach (Order obj in Model.Orders)
  {
  <a href="/vendors/@Model.Id/orders/@obj.Id"><div class="items">
      <h2>@obj.Title</h2>
      <h4>@obj.Description</h4>
      <h4>@obj.Price</h4>
      <h4>@obj.Date</h4>
    </div></a>
  }

  <a href="/vendors/@Model.Id/orders/new"><p>add order to @Model.Name</p></a>
  <a href="/vendors"><p>return to vendor list</p></a>
  <a href="/"><p>back home</p></a>
</div>

